{{page-title 'User'}}
<div class="container has-text-centered">
  <div class="column is-3 is-offset-4">
    <LinkTo @route="users">
      <button class="button mb-2" type="button">
        Back to users
      </button>
    </LinkTo>
    <div class="user-profile">
      <figure class="avatar">
        <img src={{@model.image}} width="256px" alt="User" />
      </figure>
      <p class="title has-text-white my-2">
        {{@model.name}}
      </p>
      <p class="subtitle has-text-white my-2">
        Example Value:
        {{@model.value}}
      </p>
      {{#if this.openDialogue}}
      <div class={{if this.openDialogue "modal is-active" "modal" }}>
        <div class="modal-background"></div>
        <div class="modal-content">
          <!-- Any other Bulma elements you want -->
          <p class="has-text-white">Are you sure you want to archive this user?</p>
          <button type="button" class="button is-pulled-left mt-4" {{on "click" this.archiveAUser}}>Yes</button>
          <button type="button" class="button is-pulled-right mt-4" {{on "click" this.toggleModal}}>No</button>
        </div>
        <button class="modal-close is-large" {{on "click" this.toggleModal}} aria-label="close"></button>
      </div>
      {{/if}}
      <button type="button" class="button is-pulled-left mt-4" {{on "click" this.modifyValue}}>
        Change Value
      </button>
      {{#unless @model.archived}}
      <button type="button" class="button is-pulled-right mt-4" {{on "click" this.toggleModal}}>
        Archive User
      </button>
      {{else}}
      <br/>
      <p class=" subtitle has-text-white mt-8">Archived</p>
      {{/unless}}
    </div>
  </div>
</div>
{{outlet}}